<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".login.ForgotPassword">

    <!-- Ecorecyc Logo -->
    <ImageView
        android:id="@+id/ecorecyc_logo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:src="@drawable/ecorecyc_logo"
        android:scaleType="fitCenter"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Forgot Password Text -->
    <TextView
        android:id="@+id/forgot_password_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_reg"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ecorecyc_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Enter Email Text -->
    <TextView
        android:id="@+id/enter_email_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your email account to reset password"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_reg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Forgot Password Image -->
    <ImageView
        android:id="@+id/fp_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/forgot_pass_img"
        app:layout_constraintTop_toBottomOf="@id/enter_email_Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/enter_fp_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_green_outline"
        android:drawableStart="@drawable/emailicon"
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:paddingLeft="13dp"
        android:hint="Enter Email"
        android:fontFamily="@font/dmsans_reg"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fp_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirm_fp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="17sp"
        android:background="@drawable/button2"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dmsans_reg"
        app:layout_constraintTop_toBottomOf="@id/enter_fp_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
